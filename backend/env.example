# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Notion Integration (Required for OAuth)
NOTION_CLIENT_ID=your_notion_client_id_here
NOTION_CLIENT_SECRET=your_notion_client_secret_here
NOTION_REDIRECT_URI=http://localhost:3000/auth/notion/callback

# For production deployment, update these URLs:
# FRONTEND_URL=https://your-frontend-domain.com
# NOTION_REDIRECT_URI=https://your-backend-domain.com/api/notion/callback
